{
  "manifest_version": 3,
  "name": "Simplify AI",
  "version": "1.0",
  "description": "Simplify or summarize any webpage content.",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "Popup/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ]
}