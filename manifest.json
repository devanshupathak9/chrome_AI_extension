{
  "manifest_version": 3,
  "name": "Simplify.AI",
  "version": "1.0",
  "description": "Simplify or summarize any webpage content.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "Popup/popup.html",
    "default_icon": {
      "16": "icons/icon2.png",
      "48": "icons/icon2.png",
      "128": "icons/icon2.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "commands": {
    "summarize_page": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Command+S"
      },
      "description": "Summarize the current page instantly"
    }
  }
}
